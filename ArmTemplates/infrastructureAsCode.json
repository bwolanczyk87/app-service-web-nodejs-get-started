{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string",
            "defaultValue": "[concat('kv', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "The name of the key vault to create."
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "[concat('sta', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "The name of the storage account to create."
            }
        },
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "The name of the storage account container to create."
            }
        },
        "tenantID": {
            "type": "string",
            "metadata": {
                "description": "Tenant ID."
            }
        },
        "objectID": {
            "type": "string",
            "metadata": {
                "description": "User ID from Azure Active Directory"
            }
        }
    },
    "resources": [
        {
            "name": "storageAccountWithSasTokenAndKeyValtWithSasSecret",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "outer"
                },
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/sam-cogan/Demos/master/SaSToken/SaSToken.json",
                    "contentVersion":"1.0.0.0"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "tenantID": {
                        "value": "[parameters('tenantID')]"
                    },
                    "keyVaultAccessObjectID": {
                        "value": "[parameters('objectID')]"
                    },
                    "StorageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "accountSasProperties": {
                        "value": {
                            "signedServices": "b",
                            "signedPermission": "rw",
                            "signedExpiry": "2021-03-01T00:00:01Z",
                            "signedResourceTypes": "o"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2018-03-01-preview",
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('containerName'))]",
            "dependsOn": [
                "[parameters('storageAccountName')]",
                "storageAccountWithSasTokenAndKeyValtWithSasSecret"
            ]
        }
    ],
    "outputs": {
        "armTemplateContainerUri": {
            "type": "string",
            "value": "[uri(reference(resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', resourceGroup().name, parameters('storageAccountName'), parameters('containerName')), '2018-02-01').defaultHostName, reference(resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), 'StorageSaSToken')).secretValue)]"
        }
    }
}