{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string",
            "defaultValue": "adpbarkeyVault",
            "metadata": {
                "description": "Name of KeyVault to Store SaS Token"
            }
        },
        "managedIdentityName": {
            "type": "string",
            "defaultValue": "adpbarmidentity",
            "metadata": {
                "description": "Name of managed identity use to create keyVault."
            }
        },
        "tenantID": {
            "type": "string",
            "metadata": {
                "description": "Azure AD Tenant ID"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "adpbarstorage",
            "metadata": {
                "description": "Name of Storage Account to Create"
            }
        },
        "containerName": {
            "type": "string",
            "defaultValue": "armTemplates",
            "metadata": {
                "description": "Specifies the name of the blob container."
                }
        },
        "accountSasProperties": {
            "type": "object",
            "defaultValue": {
                "signedServices": "b",
                "signedPermission": "rw",
                "signedResourceTypes": "o"
            },
            "metadata": {
                "description": "SAS object for access to ARM templates."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "linkedTemplateStorageAccount",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/101-storage-blob-container/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {"value": "[parameters('storageAccountName')]"} ,
                    "containerName": {"value": "[parameters('containerName')]"} 
                }
            }          
        },
        {
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "name": "[parameters('managedIdentityName')]",
            "apiVersion": "2018-11-30",
            "location": "[resourceGroup().location]"
        }
    ],
    "outputs": {}
}